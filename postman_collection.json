        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"JWT token received\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.jwt).to.be.a('string');",
                  "    pm.expect(jsonData.jwt.length).to.be.above(0);",
                  "    ",
                  "    // Guarda el token automáticamente",
                  "    pm.collectionVariables.set(\"jwt_token\", jsonData.jwt);",
                  "    console.log(\"✅ JWT Token guardado:\", jsonData.jwt);",
                  "});",
                  "",
                  "pm.test(\"User data received\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.userId).to.be.a('number');",
                  "    pm.expect(jsonData.email).to.be.a('string');",
                  "    pm.expect(jsonData.firstName).to.be.a('string');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
